#!/usr/bin/env bash
# Shared color output functions for scripts
# Source this file to use consistent colored output across all scripts

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Message functions
info() {
  echo -e "${GREEN}[INFO]${NC} $1"
}

step() {
  echo -e "${BLUE}[STEP]${NC} $1"
}

warn() {
  echo -e "${YELLOW}[WARN]${NC} $1"
}

error() {
  echo -e "${RED}[ERROR]${NC} $1"
}

error_and_exit() {
  error "$1"
  exit 1
}

success() {
  echo -e "${CYAN}[SUCCESS]${NC} $1"
}

# Optional: Function to disable colors (useful for logs/CI)
disable_colors() {
  RED=''
  GREEN=''
  YELLOW=''
  BLUE=''
  CYAN=''
  NC=''
}

# Auto-disable colors if not in a terminal (unless forced)
if [[ ! -t 1 ]] && [[ "${FORCE_COLOR:-}" != "1" ]]; then
  disable_colors
fi

# Ensure this file sources successfully
true
